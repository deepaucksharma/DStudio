{
  "name": "distributed-systems-compendium",
  "version": "1.0.0",
  "description": "The Compendium of Distributed Systems - Educational Resource",
  "main": "index.js",
  "scripts": {
    "dev": "mkdocs serve",
    "build": "npm run build:assets && mkdocs build",
    "build:assets": "npm run js:build && npm run css:build && npm run images:optimize",
    "js:build": "webpack --mode production",
    "js:dev": "webpack --mode development --watch",
    "css:build": "postcss docs/stylesheets/**/*.css --dir site/assets/css",
    "css:dev": "postcss docs/stylesheets/**/*.css --dir site/assets/css --watch",
    "images:optimize": "imagemin docs/assets/images/* --out-dir=site/assets/images",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "jest",
    "test:e2e": "cypress run",
    "test:a11y": "pa11y-ci",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:md",
    "lint:js": "eslint docs/javascripts/**/*.js",
    "lint:css": "stylelint docs/stylesheets/**/*.css",
    "lint:md": "markdownlint docs/**/*.md",
    "analyze": "webpack-bundle-analyzer site/assets/js/stats.json",
    "lighthouse": "lighthouse https://localhost:8000 --output html --output-path ./lighthouse-report.html",
    "deploy": "mkdocs gh-deploy",
    "clean": "rm -rf site/ .cache/ node_modules/.cache/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/deepaucksharma/DStudio.git"
  },
  "keywords": [
    "distributed-systems",
    "education",
    "mkdocs",
    "documentation"
  ],
  "author": "Deepak",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/deepaucksharma/DStudio/issues"
  },
  "homepage": "https://github.com/deepaucksharma/DStudio#readme",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "autoprefixer": "^10.4.16",
    "babel-loader": "^9.1.3",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^6.8.1",
    "cssnano": "^6.0.1",
    "cypress": "^13.3.0",
    "eslint": "^8.51.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.1",
    "html-webpack-plugin": "^5.5.3",
    "imagemin-cli": "^7.0.0",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^10.0.0",
    "imagemin-svgo": "^10.0.0",
    "jest": "^29.7.0",
    "lighthouse": "^11.2.0",
    "markdownlint-cli": "^0.37.0",
    "mini-css-extract-plugin": "^2.7.6",
    "pa11y-ci": "^3.0.1",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "postcss-preset-env": "^9.2.0",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "terser-webpack-plugin": "^5.3.9",
    "webpack": "^5.89.0",
    "webpack-bundle-analyzer": "^4.9.1",
    "webpack-cli": "^5.1.4",
    "webpack-merge": "^5.10.0",
    "workbox-webpack-plugin": "^7.0.0"
  },
  "dependencies": {
    "chart.js": "^4.4.0",
    "d3": "^7.8.5",
    "katex": "^0.16.9",
    "mermaid": "^10.5.1",
    "prismjs": "^1.29.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "roots": [
      "<rootDir>/tests"
    ],
    "collectCoverageFrom": [
      "docs/javascripts/**/*.js",
      "!docs/javascripts/**/*.min.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "env": {
      "browser": true,
      "es2021": true
    },
    "rules": {
      "no-console": "warn",
      "max-len": ["error", { "code": 100 }]
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "selector-class-pattern": null,
      "custom-property-pattern": null
    }
  },
  "pa11y": {
    "defaults": {
      "standard": "WCAG2AA",
      "runners": ["axe", "htmlcs"],
      "viewport": {
        "width": 1280,
        "height": 1024
      }
    },
    "urls": [
      "http://localhost:8000/",
      "http://localhost:8000/part1-axioms/",
      "http://localhost:8000/tools/"
    ]
  }
}