{
  "id": "dstudio_visual_regression",
  "viewports": [
    {
      "label": "phone",
      "width": 320,
      "height": 568
    },
    {
      "label": "tablet",
      "width": 768,
      "height": 1024
    },
    {
      "label": "desktop",
      "width": 1366,
      "height": 768
    }
  ],
  "scenarios": [
    {
      "label": "Homepage",
      "url": "http://localhost:8000/",
      "delay": 1000,
      "selectors": [
        ".hero-container",
        ".journey-container",
        ".grid.cards"
      ]
    },
    {
      "label": "Axioms Page",
      "url": "http://localhost:8000/part1-axioms/",
      "delay": 500,
      "selectors": [
        ".axiom-box",
        ".decision-box",
        ".md-content"
      ]
    },
    {
      "label": "Tools Page",
      "url": "http://localhost:8000/tools/",
      "delay": 500,
      "selectors": [
        ".calculator-container",
        ".tool-description"
      ]
    },
    {
      "label": "Dark Mode Homepage",
      "url": "http://localhost:8000/",
      "delay": 1000,
      "onBeforeScript": "setDarkMode.js",
      "selectors": ["document"]
    }
  ],
  "paths": {
    "bitmaps_reference": "tests/visual/reference",
    "bitmaps_test": "tests/visual/test",
    "html_report": "tests/visual/report",
    "ci_report": "tests/visual/ci_report"
  },
  "report": ["browser", "CI"],
  "engine": "puppeteer",
  "engineOptions": {
    "args": ["--no-sandbox"]
  },
  "asyncCaptureLimit": 5,
  "asyncCompareLimit": 50,
  "debug": false,
  "debugWindow": false
}