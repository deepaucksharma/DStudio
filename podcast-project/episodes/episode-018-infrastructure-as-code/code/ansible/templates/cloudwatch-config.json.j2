{
    "agent": {
        "metrics_collection_interval": 300,
        "run_as_user": "cwagent"
    },
    "metrics": {
        "namespace": "FlipkartApp/{{ environment }}",
        "metrics_collected": {
            "cpu": {
                "measurement": [
                    "cpu_usage_idle",
                    "cpu_usage_iowait",
                    "cpu_usage_user",
                    "cpu_usage_system"
                ],
                "metrics_collection_interval": 300,
                "totalcpu": false
            },
            "disk": {
                "measurement": [
                    "used_percent"
                ],
                "metrics_collection_interval": 300,
                "resources": [
                    "*"
                ]
            },
            "diskio": {
                "measurement": [
                    "io_time",
                    "read_bytes",
                    "write_bytes",
                    "reads",
                    "writes"
                ],
                "metrics_collection_interval": 300,
                "resources": [
                    "*"
                ]
            },
            "mem": {
                "measurement": [
                    "mem_used_percent",
                    "mem_available_percent"
                ],
                "metrics_collection_interval": 300
            },
            "netstat": {
                "measurement": [
                    "tcp_established",
                    "tcp_time_wait"
                ],
                "metrics_collection_interval": 300
            },
            "processes": {
                "measurement": [
                    "running",
                    "sleeping",
                    "dead"
                ]
            }
        }
    },
    "logs": {
        "logs_collected": {
            "files": {
                "collect_list": [
                    {
                        "file_path": "{{ log_dir }}/*.log",
                        "log_group_name": "/aws/ec2/flipkart-app/{{ environment }}",
                        "log_stream_name": "{instance_id}/application",
                        "retention_in_days": 30
                    },
                    {
                        "file_path": "/var/log/nginx/flipkart_access.log",
                        "log_group_name": "/aws/ec2/flipkart-app/{{ environment }}",
                        "log_stream_name": "{instance_id}/nginx-access",
                        "retention_in_days": 30
                    },
                    {
                        "file_path": "/var/log/nginx/flipkart_error.log",
                        "log_group_name": "/aws/ec2/flipkart-app/{{ environment }}",
                        "log_stream_name": "{instance_id}/nginx-error",
                        "retention_in_days": 30
                    },
                    {
                        "file_path": "/var/log/messages",
                        "log_group_name": "/aws/ec2/flipkart-app/{{ environment }}",
                        "log_stream_name": "{instance_id}/system",
                        "retention_in_days": 7
                    }
                ]
            }
        }
    }
}