{
  "quality_dashboard": {
    "title": "Architects Handbook - Quality Dashboard",
    "description": "Real-time quality metrics and monitoring for the Architects Handbook documentation",
    "last_updated": "2025-01-01",
    "version": "1.0.0"
  },
  "metrics": {
    "content_quality": {
      "name": "Content Quality Score",
      "description": "Average quality score across all documents",
      "target": 85,
      "warning_threshold": 80,
      "critical_threshold": 70,
      "unit": "points",
      "calculation": "weighted_average",
      "weights": {
        "completeness": 0.3,
        "technical_accuracy": 0.25,
        "structure": 0.2,
        "links_valid": 0.15,
        "readability": 0.1
      }
    },
    "content_completeness": {
      "name": "Content Completeness Rate",
      "description": "Percentage of documents meeting completeness standards",
      "target": 95,
      "warning_threshold": 90,
      "critical_threshold": 85,
      "unit": "percentage",
      "calculation": "completed_docs / total_docs * 100"
    },
    "link_health": {
      "name": "Link Health Score",
      "description": "Percentage of functional links (internal and external)",
      "target": 99,
      "warning_threshold": 95,
      "critical_threshold": 90,
      "unit": "percentage",
      "calculation": "working_links / total_links * 100",
      "breakdown": {
        "internal_links": "target: 100%",
        "external_links": "target: 95%",
        "anchor_links": "target: 100%"
      }
    },
    "technical_accuracy": {
      "name": "Technical Accuracy Score",
      "description": "Percentage of validated code examples and formulas",
      "target": 98,
      "warning_threshold": 95,
      "critical_threshold": 90,
      "unit": "percentage",
      "calculation": "validated_technical_content / total_technical_content * 100"
    },
    "user_experience": {
      "name": "User Experience Score",
      "description": "Combined performance, accessibility, and mobile scores",
      "target": 90,
      "warning_threshold": 85,
      "critical_threshold": 80,
      "unit": "points",
      "calculation": "weighted_average",
      "components": {
        "performance": {
          "weight": 0.4,
          "metrics": ["page_load_time", "interactive_response", "search_speed"]
        },
        "accessibility": {
          "weight": 0.3,
          "metrics": ["wcag_compliance", "keyboard_navigation", "screen_reader"]
        },
        "mobile_experience": {
          "weight": 0.3,
          "metrics": ["responsive_design", "touch_targets", "mobile_performance"]
        }
      }
    },
    "coverage_metrics": {
      "total_documents": {
        "description": "Total number of documentation files",
        "current": 0,
        "trend": "increasing"
      },
      "total_lines": {
        "description": "Total lines of content",
        "current": 0,
        "trend": "increasing"
      },
      "total_words": {
        "description": "Total word count",
        "current": 0,
        "trend": "increasing"
      },
      "estimated_reading_time": {
        "description": "Total estimated reading time",
        "current": 0,
        "unit": "minutes",
        "trend": "increasing"
      }
    }
  },
  "quality_gates": {
    "pre_merge": {
      "name": "Pre-merge Quality Gate",
      "required": true,
      "criteria": {
        "content_quality_score": ">= 80",
        "no_critical_errors": true,
        "links_functional": ">= 95%",
        "technical_validation": "passed"
      }
    },
    "release": {
      "name": "Release Quality Gate", 
      "required": true,
      "criteria": {
        "content_quality_score": ">= 85",
        "content_completeness": ">= 95%",
        "link_health_score": ">= 99%",
        "technical_accuracy": ">= 98%",
        "user_experience_score": ">= 90%",
        "performance_score": ">= 90",
        "accessibility_compliance": "100%"
      }
    }
  },
  "monitoring": {
    "frequency": {
      "real_time": ["link_validation", "technical_errors"],
      "hourly": ["content_updates", "user_metrics"],
      "daily": ["comprehensive_validation", "quality_scores"],
      "weekly": ["trend_analysis", "comparative_metrics"],
      "monthly": ["deep_audit", "quality_review"]
    },
    "alerts": {
      "critical": {
        "trigger_conditions": [
          "content_quality_score < 70",
          "link_health_score < 90",
          "technical_accuracy < 90",
          "broken_links > 10"
        ],
        "notification_channels": ["email", "slack", "pagerduty"],
        "escalation_time": "15 minutes"
      },
      "warning": {
        "trigger_conditions": [
          "content_quality_score < 80",
          "link_health_score < 95",
          "technical_accuracy < 95",
          "broken_links > 5"
        ],
        "notification_channels": ["email", "slack"],
        "escalation_time": "1 hour"
      },
      "info": {
        "trigger_conditions": [
          "new_todo_markers",
          "content_updates",
          "quality_improvements"
        ],
        "notification_channels": ["slack"],
        "escalation_time": "24 hours"
      }
    }
  },
  "reporting": {
    "dashboard_sections": {
      "overview": {
        "title": "Quality Overview",
        "widgets": [
          "quality_score_gauge",
          "completion_rate_chart", 
          "link_health_status",
          "recent_issues_list"
        ]
      },
      "content_metrics": {
        "title": "Content Metrics",
        "widgets": [
          "document_count_trend",
          "content_volume_chart",
          "reading_time_distribution",
          "section_completeness_matrix"
        ]
      },
      "technical_health": {
        "title": "Technical Health",
        "widgets": [
          "code_validation_status",
          "formula_accuracy_chart",
          "diagram_render_health",
          "calculator_functionality"
        ]
      },
      "user_experience": {
        "title": "User Experience",
        "widgets": [
          "performance_scores",
          "accessibility_compliance",
          "mobile_experience_metrics",
          "search_effectiveness"
        ]
      },
      "trends": {
        "title": "Quality Trends",
        "widgets": [
          "quality_score_timeline",
          "issue_resolution_trend",
          "content_growth_chart",
          "improvement_velocity"
        ]
      }
    },
    "export_formats": ["json", "pdf", "html", "csv"],
    "automated_reports": {
      "daily_summary": {
        "recipients": ["content_team"],
        "format": "html",
        "schedule": "08:00 UTC"
      },
      "weekly_detailed": {
        "recipients": ["content_team", "engineering_leads"],
        "format": "pdf",
        "schedule": "monday 09:00 UTC"
      },
      "monthly_executive": {
        "recipients": ["leadership"],
        "format": "pdf",
        "schedule": "first monday 10:00 UTC"
      }
    }
  },
  "integrations": {
    "github": {
      "webhook_url": "${GITHUB_WEBHOOK_URL}",
      "events": ["push", "pull_request", "issues"],
      "status_checks": true
    },
    "slack": {
      "webhook_url": "${SLACK_WEBHOOK_URL}",
      "channels": {
        "alerts": "#docs-alerts",
        "updates": "#docs-updates",
        "reports": "#docs-reports"
      }
    },
    "analytics": {
      "google_analytics": "${GA_TRACKING_ID}",
      "mixpanel": "${MIXPANEL_TOKEN}",
      "custom_tracking": true
    }
  },
  "data_sources": {
    "content_validation": {
      "script": "scripts/validate_content.py",
      "schedule": "daily",
      "output_format": "json"
    },
    "link_validation": {
      "script": "scripts/check_links.sh", 
      "schedule": "hourly",
      "output_format": "text"
    },
    "performance_metrics": {
      "tool": "lighthouse",
      "schedule": "daily",
      "output_format": "json"
    },
    "accessibility_audit": {
      "tool": "axe-core",
      "schedule": "weekly",
      "output_format": "json"
    },
    "git_metrics": {
      "source": "github_api",
      "schedule": "hourly",
      "metrics": ["commits", "contributors", "file_changes"]
    }
  },
  "historical_data": {
    "retention_period": "2 years",
    "archival_schedule": "monthly",
    "backup_location": "quality_metrics_archive/",
    "data_formats": ["json", "parquet"]
  },
  "quality_standards": {
    "document_types": {
      "case_studies": {
        "min_lines": 500,
        "required_sections": 6,
        "min_reading_time": 15,
        "code_examples": ">=2",
        "diagrams": ">=1"
      },
      "implementation_playbooks": {
        "min_lines": 800,
        "required_sections": 5,
        "min_reading_time": 20,
        "code_examples": ">=3",
        "checklists": ">=1"
      },
      "quantitative_analysis": {
        "min_lines": 400,
        "required_sections": 4,
        "min_reading_time": 10,
        "formulas": ">=2",
        "interactive_tools": ">=1"
      },
      "human_factors": {
        "min_lines": 400,
        "required_sections": 4,
        "min_reading_time": 15,
        "best_practices": ">=5",
        "metrics": ">=3"
      }
    },
    "scoring_weights": {
      "content_completeness": 30,
      "technical_accuracy": 25,
      "structure_quality": 20,
      "link_health": 15,
      "readability": 10
    }
  },
  "automation": {
    "quality_gates": {
      "enabled": true,
      "fail_on_critical": true,
      "auto_retry": false
    },
    "self_healing": {
      "enabled": false,
      "safe_actions": ["format_fixes", "link_updates"],
      "requires_approval": true
    },
    "notifications": {
      "enabled": true,
      "rate_limiting": "5 per hour",
      "smart_grouping": true
    }
  }
}